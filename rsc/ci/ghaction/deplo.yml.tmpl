name: Deplo Launcher

on: 
  push:
    branches: [{}]
  pull_request:
    branches: [{}]

jobs:
  deplo:
    name: running CI jobs
    # This job runs on Linux
    runs-on: ubuntu-latest
    container: {}:{}
    steps:
      - uses: actions/checkout@v2
        with:
          lfs: true
      - name: Run Deplo
        env:
          DEPLO_GHACTION_PULL_REQUEST_URL: ${{ github.event.pull_request.url }}
        run: deplo -w {} ci kick
