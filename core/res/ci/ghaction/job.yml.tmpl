{name}:
  needs: [{needs}]
  if: needs.deplo-main.outputs.{name}
  name: Running job {name}
  runs-on: {machine}
{container:>2}
  steps:
{checkout:>4}
    - name: Run job {name}
      run: deplo ci run {name}
    - name: Setup ssh session to debug
      if: ${{{{ failure() }}}}
      uses: umegaya/action-tmate@132a4fe73c61b3459556a7c1baf1eefc8c3e15d2
      with:
        sudo: {sudo}