{name}:
  name: Running Deplo workflow {name}
  runs-on: {machine}
  {container}
  steps:
{checkout:>4}
    - name: Start workflow
      run: deplo ci workflow {name}
    - name: Setup ssh session to debug
      if: ${{{{ failure() }}}}
      uses: mxschmitt/action-tmate@v3
      with:
        sudo: false