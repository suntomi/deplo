name: Deplo CI/CD

on: 
  push:
    branches: [{targets}]
  pull_request:
    branches: [{targets}]
  
env:
  DEPLO_GHACTION_PULL_REQUEST_URL: ${{{{ github.event.pull_request.url }}}}
{secrets:>2}
jobs:
  deplo-main:
    name: Start CI
    runs-on: ubuntu-latest
    container: {image}:{tag}
    steps:
{checkout:>6}
      - name: Start deplo
        run: deplo ci kick
      - name: Setup ssh session to debug
        if: ${{{{ failure() }}}}
        uses: mxschmitt/action-tmate@v3
        with:
          sudo: false
