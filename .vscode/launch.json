{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Steps",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "run", "mac", "steps"
        ]
    },        
    {
        "name": "Run",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "i", "builder", "sh", "@long_running"
        ]
    },    
    {
        "name": "RunWithPayload",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "run", "-p=payload.json", "builder"
        ]
    },    
    {
        "name": "ReleaseAssets",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release-assets", "nightly", "tools/docker/bin/cli", "-o", "name=deplo-Linux"
        ]
    },
    {
        "name": "Release",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release", "nightly", "-o", "name=nightly"
        ]
    },
    {
        "name": "Boot",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "-d=dryrun", "boot", "-p=payload.json"
        ]
    },
    {
        "name": "Halt",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "halt", "-r=nightly", "-w=integrate"
        ]
    },
    {
        "name": "Init",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "init"
        ]
    },
    {
        "name": "SetEnv",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "ci", "setenv"
        ]
    },
    {
        "name": "Steps",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "-r", "nightly", "d", "mac", "steps"
        ]
    }]
}