{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "RunTask",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "run", "-w=integrate", "builder", "sh", "@long_running"
        ]
    },    
    {
        "name": "ReleaseAssets",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release-assets", "nightly", "tools/docker/bin/cli", "-o", "name=deplo-Linux"
        ]
    },
    {
        "name": "Release",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release", "nightly", "-o", "name=nightly"
        ]
    },
    {
        "name": "Start",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "start", "-r=nightly", "-w=integrate"
        ]
    },
    {
        "name": "Stop",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "stop", "-r=nightly", "-w=integrate"
        ]
    },
    {
        "name": "Init",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "init"
        ]
    },
    {
        "name": "Steps",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "-r", "nightly", "d", "mac", "steps"
        ]
    }]
}