{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "lldb",
        "request": "launch",
        "name": "Test",
        "cargo": {
            "args": [
                "test",
                "--no-run",
                "--lib",
                "--package=core",
                "shell::tests::curl_fetch_test"
            ]
        },
        "args": [],
        "cwd": "${workspaceFolder}"
    },
    {
        "name": "Steps",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "run", "mac", "steps"
        ]
    },        
    {
        "name": "Run",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "d", "product"
        ]
    },    
    {
        "name": "RunWithPayload",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "env": {
            "DEPLO_GHACTION_WORKFLOW_NAME": "Deplo System"
        },
        "args": [
            "-v=3", "run", "-p=payload.json", "remote-test"
        ]
    },    
    {
        "name": "RunWithCustomWorkflow",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "env": {
            "DEPLO_GHACTION_WORKFLOW_NAME": "Deplo System"
        },
        "args": [
            "-v=3", "run", "-w", "prbot", "-c", "{\"author\":\"umegaya\"}", "prbot-test"
        ]
    },
    {
        "name": "ReleaseAssets",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release-assets", "nightly", "tools/docker/bin/cli", "-o", "name=deplo-Linux"
        ]
    },
    {
        "name": "Release",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release", "nightly", "-o", "name=nightly"
        ]
    },
    {
        "name": "MergePR",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "pr", "merge", "https://github.com/suntomi/deplo/pull/134", "-o", "auto_merge=true",
            "-o", "message=\"test comment on merge\"", "-o", "approve=false"
        ]
    },
    {
        "name": "Boot",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "-d=dryrun", "boot", "-p=payload.json"
        ]
    },
    {
        "name": "Halt",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "halt", "-r=nightly", "-w=integrate"
        ]
    },
    {
        "name": "GetEnv",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "ci", "getenv", "--out", "test.txt"
        ]
    },
    {
        "name": "Init",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "init"
        ]
    },
    {
        "name": "SetEnv",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "ci", "setenv"
        ]
    },
    {
        "name": "Steps",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "job", "run-steps", "module_test", "-p",
            "{\"name\":\"integrate\",\"context\":{},\"job\":{\"name\":\"module_test\",\"command\":null},\"exec\":{\"envs\":{},\"revision\":null,\"release_target\":null,\"verbosity\":3,\"remote\":false,\"follow_dependency\":false,\"silent\":false,\"timeout\":null}}"
        ]
    }]
}