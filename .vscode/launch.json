{
    "version": "0.2.0",
    "configurations": [{
        "name": "ReleaseAssets",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release-assets", "nightly", "tools/docker/bin/cli", "-o", "name=deplo-Linux"
        ]
    },
    {
        "name": "Release",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "vcs", "release", "nightly", "-o", "name=nightly"
        ]
    },
    {
        "name": "Kick",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "-v=3", "ci", "kick"
        ]
    },
    {
        "name": "Deploy",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "ci", "deploy", "product"
        ]
    },
    {
        "name": "Init",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/cli",
        "args": [
            "init"
        ]
    }]
}